<h1>Index</h1>

<ul>
  <% @task.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
    <p><%= link_to 'Delete !', task_path(id: task.id), method: :delete, data: { confirm: "Are you sure?" } %></p>

    <% if task.completed %>
      <i class="fa fa-check-square"></i>
    <% else %>
      <i class="fa fa-square"></i>
    <% end %>
  <% end %>
</ul>
<br>
<%= link_to "+ Add a new task", tasks_new_path %>
